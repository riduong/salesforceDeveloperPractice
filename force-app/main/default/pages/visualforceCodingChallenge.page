 <apex:page controller="VFChallenge9Controller">
    <h1>Search for Accounts</h1>

    <apex:form>
        <apex:pageBlock title="Accounts List">
            <apex:pageBlockSection>
                <apex:inputText value="{!searchTerm}" label="Search for Account" id="searchInput" onkeyup="searchAccounts()" />
            </apex:pageBlockSection>

            <apex:pageBlockTable value="{!accountList}" var="acc">
                <apex:column headerValue="Account Name">
                    {!acc.accountName}
                </apex:column>
                <apex:column headerValue="Related Contacts">
                    {!acc.contactNames}
                </apex:column>
            </apex:pageBlockTable>
        </apex:pageBlock>
    </apex:form>
</apex:page>










